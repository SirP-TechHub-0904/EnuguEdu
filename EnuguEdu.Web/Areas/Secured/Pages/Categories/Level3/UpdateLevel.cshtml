@page
@model EnuguEdu.Web.Areas.Secured.Pages.Categories.Level3.UpdateLevelModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title uppercase">UPDATE Categories UNDER @Model.Category3.Category2.Title</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Category4.Category3Id" />
                    <input type="hidden" asp-for="Category4.Id" />
                    <input type="hidden" asp-for="Category4.Color" />

                    <div class="form-group">
                        <label asp-for="Category4.Title" class="control-label"></label>
                        <input asp-for="Category4.Title" class="form-control" />
                        <span asp-validation-for="Category4.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category4.Description" class="control-label"></label>
                        <input asp-for="Category4.Description" class="form-control" />
                        <span asp-validation-for="Category4.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category4.ShowAddress" /> @Html.DisplayNameFor(model => model.Category4.ShowAddress)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category4.Address" class="control-label"></label>
                        <input asp-for="Category4.Address" class="form-control" />
                        <span asp-validation-for="Category4.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category4.ShowEmail" /> @Html.DisplayNameFor(model => model.Category4.ShowEmail)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category4.Email" class="control-label"></label>
                        <input asp-for="Category4.Email" class="form-control" />
                        <span asp-validation-for="Category4.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category4.ShowPhoneNumbers" /> @Html.DisplayNameFor(model => model.Category4.ShowPhoneNumbers)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category4.PhoneNumbers" class="control-label"></label>
                        <input asp-for="Category4.PhoneNumbers" class="form-control" />
                        <span asp-validation-for="Category4.PhoneNumbers" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category4.ShowWebsite" /> @Html.DisplayNameFor(model => model.Category4.ShowWebsite)
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category4.Website" class="control-label"></label>
                        <input asp-for="Category4.Website" class="form-control" />
                        <span asp-validation-for="Category4.Website" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category4.ShowCode" /> @Html.DisplayNameFor(model => model.Category4.ShowCode)
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category4.Code" class="control-label"></label>
                        <input asp-for="Category4.Code" class="form-control" />
                        <span asp-validation-for="Category4.Code" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>
