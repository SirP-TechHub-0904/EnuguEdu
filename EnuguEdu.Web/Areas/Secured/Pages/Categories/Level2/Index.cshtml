@page
@model EnuguEdu.Web.Areas.Secured.Pages.Categories.Level2.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Model.Category1.Title</h3>


        <a asp-page="./Create" class="btn bg-gradient-warning btn-sm" style="float:right;">Add New</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div class="table-responsive">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>S/N</th>
            <th>
                @Html.DisplayNameFor(model => model.Category2[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category2[0].Description)
            </th>
                        <th>Appointment</th>
                        <th>Offices Under Them</th>
                        <th></th>
        </tr>
    </thead>
                @{
                    int sn = 0;
                }
    <tbody>
@foreach (var item in Model.Category2) {
        <tr>
                            <td>
                                @{
                                    sn++;
                                }
                                @sn
                            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">
                @Html.DisplayFor(modelItem => item.Title)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
             <td>
                 <a asp-page="/ProfilePage/ProfileAccount" asp-route-id="@item.UserId">
                                <h4 style="font-size: 1rem;margin:0;">@item.Fullname</h4>
                                </a>
                                <h5 style="font-size: 0.8rem;margin:0;">@item.Position</h5>
                                <h6 style="font-size: 0.6rem;margin:0;">@item.StartOfAppointment - @item.EndOfAppointment</h6>
             </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubCategoryCount) Offices
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success">Action</button>

                                    <div class="btn-group">
                                        <button type="button" class="btn btn-success dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                        </button>
                                        <div class="dropdown-menu" style="">

                                            <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>

                                        </div>
                                    </div>
                                </div>

                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
