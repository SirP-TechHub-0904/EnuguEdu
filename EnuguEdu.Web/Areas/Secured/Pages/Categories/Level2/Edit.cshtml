@page
@model EnuguEdu.Web.Areas.Secured.Pages.Categories.Level2.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE Categories</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Category2.Id" />
                    <input type="hidden" asp-for="Category2.Color" />
                     <div class="form-group">
                        <label asp-for="Category2.Title" class="control-label"></label>
                        <input asp-for="Category2.Title" class="form-control" />
                        <span asp-validation-for="Category2.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category2.Description" class="control-label"></label>
                        <input asp-for="Category2.Description" class="form-control" />
                        <span asp-validation-for="Category2.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category2.ShowAddress" /> @Html.DisplayNameFor(model => model.Category2.ShowAddress)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category2.Address" class="control-label"></label>
                        <input asp-for="Category2.Address" class="form-control" />
                        <span asp-validation-for="Category2.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category2.ShowEmail" /> @Html.DisplayNameFor(model => model.Category2.ShowEmail)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category2.Email" class="control-label"></label>
                        <input asp-for="Category2.Email" class="form-control" />
                        <span asp-validation-for="Category2.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category2.ShowPhoneNumbers" /> @Html.DisplayNameFor(model => model.Category2.ShowPhoneNumbers)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category2.PhoneNumbers" class="control-label"></label>
                        <input asp-for="Category2.PhoneNumbers" class="form-control" />
                        <span asp-validation-for="Category2.PhoneNumbers" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category2.ShowWebsite" /> @Html.DisplayNameFor(model => model.Category2.ShowWebsite)
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category2.Website" class="control-label"></label>
                        <input asp-for="Category2.Website" class="form-control" />
                        <span asp-validation-for="Category2.Website" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category2.ShowCode" /> @Html.DisplayNameFor(model => model.Category2.ShowCode)
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category2.Code" class="control-label"></label>
                        <input asp-for="Category2.Code" class="form-control" />
                        <span asp-validation-for="Category2.Code" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
