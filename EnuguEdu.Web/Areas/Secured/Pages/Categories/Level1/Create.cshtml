@page
@model EnuguEdu.Web.Areas.Secured.Pages.Categories.Level1.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">NEW Categories</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category1.Title" class="control-label"></label>
                        <input asp-for="Category1.Title" class="form-control" id="upper" onkeyup="myUppercase()" />
                <span asp-validation-for="Category1.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category1.Description" class="control-label"></label>
                <input asp-for="Category1.Description" class="form-control" />
                <span asp-validation-for="Category1.Description" class="text-danger"></span>
            </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category1.ShowAddress" /> @Html.DisplayNameFor(model => model.Category1.ShowAddress)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category1.Address" class="control-label"></label>
                        <input asp-for="Category1.Address" class="form-control" />
                        <span asp-validation-for="Category1.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category1.ShowEmail" /> @Html.DisplayNameFor(model => model.Category1.ShowEmail)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category1.Email" class="control-label"></label>
                        <input asp-for="Category1.Email" class="form-control" />
                        <span asp-validation-for="Category1.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category1.ShowPhoneNumbers" /> @Html.DisplayNameFor(model => model.Category1.ShowPhoneNumbers)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category1.PhoneNumbers" class="control-label"></label>
                        <input asp-for="Category1.PhoneNumbers" class="form-control" />
                        <span asp-validation-for="Category1.PhoneNumbers" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category1.ShowWebsite" /> @Html.DisplayNameFor(model => model.Category1.ShowWebsite)
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category1.Website" class="control-label"></label>
                        <input asp-for="Category1.Website" class="form-control" />
                        <span asp-validation-for="Category1.Website" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Category1.ShowCode" /> @Html.DisplayNameFor(model => model.Category1.ShowCode)
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="Category1.Code" class="control-label"></label>
                        <input asp-for="Category1.Code" class="form-control" />
                        <span asp-validation-for="Category1.Code" class="text-danger"></span>
                    </div>
                    

                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
