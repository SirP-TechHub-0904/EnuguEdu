@page
@model EnuguEdu.Web.Areas.Secured.Pages.Organogram.Level1.NewLevelModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title uppercase">NEW ORGANOGRAM UNDER @Model.OgLevel1.Title</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="OgLevel2.OgLevel1Id" value="@Model.OgLevel1.Id" />

                    <div class="form-group">
                        <label asp-for="OgLevel2.Title" class="control-label"></label>
                        <input asp-for="OgLevel2.Title" class="form-control" />
                        <span asp-validation-for="OgLevel2.Title" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="OgLevel2.Description" class="control-label"></label>
                        <input asp-for="OgLevel2.Description" class="form-control" />
                        <span asp-validation-for="OgLevel2.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
